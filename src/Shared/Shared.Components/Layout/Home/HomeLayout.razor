@inherits LayoutComponentBase
@layout StaticBaseLayout
@inject NavigationManager Navigation

<main class="tw-group tw-flex tw-h-full tw-flex-col">
  <!-- Top Header -->
  <div class="tw-navbar tw-bg-base-300">
    <div class="tw-mx-2 tw-mr-auto tw-px-2">
      <p class="tw-bg-gradient-to-r tw-from-pink-500 tw-via-purple-500 tw-to-pink-500 tw-bg-clip-text tw-text-transparent tw-text-3xl tw-font-bold tw-italic">
        Fadi Labs
      </p>
    </div>

    <div class="tw-flex-1 tw-gap-2 tw-ml-4">
      <ul class="tw-menu tw-menu-horizontal tw-p-0 tw-gap-1 tw-hidden sm:tw-flex">
       <HomeLayoutNavBarLinks />
      </ul>
    </div>

    <ThemeControllerButton />
    <div class="tw-dropdown tw-dropdown-bottom tw-dropdown-end tw-py-0 sm:tw-hidden">
      <div tabindex="0" role="button" class="tw-btn tw-btn-square tw-btn-ghost">
        <!-- dots-vertical icon -->
        <svg class="tw-h-8 tw-w-8" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
          <path stroke="currentColor" stroke-linecap="round" stroke-width="2" d="M12 6h.01M12 12h.01M12 18h.01" />
        </svg>
      </div>
      <ul tabindex="0" class="tw-dropdown-content tw-menu tw-z-[1] tw-w-52 tw-shadow-xl tw-bg-base-200 tw-gap-1">
        <HomeLayoutNavBarLinks />
      </ul>
    </div>
  </div>

  <div class="tw-bg-gradient-to-r tw-from-pink-500 tw-via-purple-500 tw-to-pink-500 tw-relative tw-h-1 tw-overflow-hidden">
    <SectionOutlet SectionName="nav-loading"></SectionOutlet>
  </div>

  <main class="tw-flex-1 tw-relative tw-flex tw-overflow-hidden tw-bg-base-200" id="main-body">
    <!-- Body Content -->
    <div class="tw-flex-1 tw-relative tw-flex tw-flex-col tw-overflow-hidden">
      <div class="tw-h-full tw-overflow-auto scroller">
        <div class="tw-p-2 tw-flex tw-flex-col tw-gap-2">
          <div id="dev-temp-warning">
            <AlertMessage Type="AlertMessageType.Warning">
              <Body>
                <p>
                  This is a <strong>TEST</strong> site intended for deployment testing and setup verification.
                  It is not suitable for production use.
                  Features, data, and configurations may change or be removed without notice.
                </p>
              </Body>
            </AlertMessage>
          </div>
          <div class="tw-mx-auto tw-w-full tw-max-w-screen-xl">
            @Body
          </div>
        </div>
      </div>
    </div>
  </main>

  <!-- Bottom Footer -->
  <footer class="tw-bg-base-300 tw-text-center tw-text-xs">© 2024 Fadi Ksho | Built with ❤ using .NET @Environment.Version.Major & Blazor</footer>
</main>

<div id="blazor-error-ui" class="tw-bg-error">
  An unhandled error has occurred.
  <a href="" class="reload">Reload</a>
  <a class="dismiss">🗙</a>
</div>

