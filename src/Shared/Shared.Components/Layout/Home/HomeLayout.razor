@inherits LayoutComponentBase
@layout StaticBaseLayout
@inject NavigationManager Navigation

<main class="group flex h-full flex-col">
  <!-- Top Header -->
  <div class="navbar bg-base-300">
    <div class="mx-2 mr-auto px-2">
      <p class="bg-gradient-to-r from-primary via-purple-500 to-pink-500 bg-clip-text text-transparent text-3xl font-bold italic">
        Fadi Labs
      </p>
    </div>

    <div class="flex-1 gap-2 ml-4">
      <ul class="menu menu-horizontal p-0 gap-1 hidden sm:flex">
       <HomeLayoutNavBarLinks />
      </ul>
    </div>

    <ThemeControllerButton />
    <div class="dropdown dropdown-bottom dropdown-end py-0 sm:hidden">
      <div tabindex="0" role="button" class="btn btn-square btn-ghost">
        <!-- dots-vertical icon -->
        <svg class="h-8 w-8" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
          <path stroke="currentColor" stroke-linecap="round" stroke-width="2" d="M12 6h.01M12 12h.01M12 18h.01" />
        </svg>
      </div>
      <ul tabindex="0" class="dropdown-content menu z-[1] w-52 shadow-xl bg-base-200 gap-1">
        <HomeLayoutNavBarLinks />
      </ul>
    </div>
  </div>

  <div class="bg-gradient-to-r from-primary via-purple-500 to-pink-500 relative h-1 overflow-hidden">
    <SectionOutlet SectionName="nav-loading"></SectionOutlet>
  </div>

  <main class="flex-1 relative flex overflow-hidden" id="main-body">
    <!-- Body Content -->
    <div class="flex-1 relative flex flex-col overflow-hidden">
      <div class="h-full overflow-auto scroller bg-base-300">
        <div class="p-2 flex flex-col gap-2 bg-base-100">
          <div id="dev-temp-warning">
            <AlertMessage Type="AlertMessageType.Warning">
              <Body>
                <p>
                  This is a <strong>TEST</strong> site intended for deployment testing and setup verification.
                  It is not suitable for production use.
                  Features, data, and configurations may change or be removed without notice.
                </p>
              </Body>
            </AlertMessage>
          </div>
          <div class="mx-auto w-full max-w-screen-xl">
            @Body
          </div>
        </div>
      </div>
    </div>
  </main>

  <!-- Bottom Footer -->
  <footer class="bg-base-300 text-center text-xs">© 2024 Fadi Ksho | Built with ❤ using .NET @Environment.Version.Major & Blazor</footer>
</main>

<div id="blazor-error-ui" class="bg-error text-white">
  An unhandled error has occurred.
  <a href="" class="reload">Reload</a>
  <a class="dismiss">🗙</a>
</div>

