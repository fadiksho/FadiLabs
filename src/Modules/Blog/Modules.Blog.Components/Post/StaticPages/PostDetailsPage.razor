@page "/blog/{slug}"

@attribute [StreamRendering]

<PageTitle>@_result.Entity?.Title</PageTitle>

<NavBarLoading Show="!_result.IsDefined" />

@if (!_result.IsDefined)
{
	<div class="flex flex-col items-end">
		<div class="skeleton h-8 w-36"></div>
	</div>
}
else if(_result.IsFailed)
{
	<ResultError Error="_result.Error"/>
}
else
{
	<PostView Post="_result.Entity" />
}