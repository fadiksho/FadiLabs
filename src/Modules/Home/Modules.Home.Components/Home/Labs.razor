@page "/labs"
@using global::Shared.Components.Layout.Modules
@layout global::Shared.Components.Layout.Modules.MainLayout

<PageTitle>Labs</PageTitle>

<div class="w-full bg-base-100 shadow-xl p-4">
  <!-- Description Row for Cards -->
  <div class="mb-4">
    <h2 class="text-2xl font-bold">My lab account</h2>
  </div>
  <!-- Primary Card for User Profile -->
  <div class="w-full bg-base-100 shadow-xl p-4 flex flex-col">
    <LabAuthorizeView>
      <div class="flex gap-4 items-center">
        <figure>
          <img src="@context.User.GetProfilePicture()" alt="Profile Image" class="rounded-full w-16 h-16" />
        </figure>
        <div class="flex-1 flex flex-col gap-2">
          <div>
            <h2 class="text-2xl font-bold">@context.User.GetUserName()</h2>
            <p>@context.User.GetEmail()</p>
          </div>
        </div>
      </div>
    </LabAuthorizeView>

    <div class="ml-auto">
      <LoginLogoutButton />
    </div>
    
  </div>
</div>

<!-- Section for Cards -->
<div class="w-full bg-base-100 shadow-xl p-4">
  <!-- Description Row for Cards -->
  <div class="mb-4">
    <h2 class="text-2xl font-bold">Labs</h2>
    <p>This section represents the different labs currently available.</p>
  </div>

  <!-- Grid for Cards -->
  <div class="grid grid-cols-1 gap-4">
    <!-- Card 1 -->
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title">Pick Your First Module Lab!</h2>
        <p>Hey there! I'm working on some cool new modules. Which one should I build first? Let me know your thoughts!</p>
        <div class="card-actions justify-end">
          <button class="btn btn-ghost btn-disabled" disabled>Enter lab</button>
        </div>
      </div>
    </div>
  </div>
</div>